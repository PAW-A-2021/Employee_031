@using EmployeeApp_031.Helper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeApp_031</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/js/site.js" />
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"/>
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light fixed-top border-bottom mb-3 nav__layout">
            <div class="container">
                <a class="navbar-brand nav__logo" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-address-book"></i> &nbsp; EmployeeApp_031</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item @Url.MakeActive("Employees")">
                            <a class="nav-link nav__name" asp-action="Index" asp-controller="Employees">Home <span class='sr-only'>(current)</span></a>
                        </li>
                        <li class="nav-item @Url.MakeActive("Privacy")">
                            <a class="nav-link nav__name" asp-action="Index" asp-controller="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <div class="my_footer border-top">
        <div class="container">
          <footer class="row row-cols-5 py-4 my-4">
            <div class="col-md-3">
              <a asp-action="Index" class="d-flex align-items-center mb-3 link-dark text-underline-hover">
                <i class="fas fa-address-book icon__page"></i>
                <span class="app__name">Employee Website</span>
              </a>
            </div>


            <div class="col-lg-4 sec__about">
              <h5>About Us</h5>
              <div class="flex-column">
                 <span>We hiring of new employee who want to join us. We invite you in out there with category back end web developer. Check the announcement about our office in instagram and linkedin</span>
              </div>
            </div>

            <div class="col-lg-2 sec__link">
              <h5>Section</h5>
              <ul class="nav flex-column">
                <li class="nav-item mb-2 text-underline-hover @Url.MakeActive("Employees")"><a asp-action="Index" asp-controller="Employees" class="nav-link p-0 sec_1">Home</a></li>
                <li class="nav-item mb-2 text-underline-hover @Url.MakeActive("Privacy")"><a asp-action="Index" asp-controller="Privacy" class="nav-link p-0 sec_2">Privacy</a></li>
              </ul>
            </div>

            <div class="col sec__contact">
              <h5>Contact Us</h5>
              <ul class="nav flex-column">
                <li class="nav-item mb-2">Indonesia</li>
                <li class="nav-item mb-2">082901901901</li>
                <li class="nav-item mb-2">office@gmail.com</li>
              </ul>
            </div>
          </footer>
          <p class="text-muted copyright">&copy; 2021 - EmployeeApp_031. All Right Reserved</p>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
